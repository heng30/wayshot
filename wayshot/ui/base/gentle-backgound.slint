import { Theme } from "theme.slint";

export component GentleBackground inherits Rectangle {
    background: @linear-gradient(135deg, #0f2847, #1a3d6f);

    for i in [
        { x: 0.15, y: 0.25, opacity: 0.12, size: 0.3 },
        { x: 0.75, y: 0.15, opacity: 0.08, size: 0.25 },
        { x: 0.45, y: 0.65, opacity: 0.15, size: 0.35 },
        { x: 0.85, y: 0.55, opacity: 0.10, size: 0.40 },
        { x: 0.25, y: 0.85, opacity: 0.06, size: 0.20 },
        { x: 0.65, y: 0.35, opacity: 0.09, size: 0.30 },
        { x: 0.35, y: 0.15, opacity: 0.11, size: 0.25 },
        { x: 0.55, y: 0.75, opacity: 0.07, size: 0.35 },
        { x: 0.05, y: 0.50, opacity: 0.13, size: 0.30 },
        { x: 0.95, y: 0.30, opacity: 0.08, size: 0.25 },
        { x: 0.20, y: 0.60, opacity: 0.10, size: 0.28 },
        { x: 0.70, y: 0.80, opacity: 0.05, size: 0.32 }
    ]: Rectangle {
        property <length> orb-size: Math.min(parent.width, parent.height) * i.size;

        width: self.orb-size;
        height: self.orb-size;
        x: parent.width * i.x - self.width / 2;
        y: parent.height * i.y - self.height / 2;
        background: @radial-gradient(circle, #ffffff, transparent);
        opacity: i.opacity * Theme.golden-ratio;
        border-radius: self.width / 2;
        drop-shadow-blur: self.orb-size / 2;
        drop-shadow-color: rgba(255, 255, 255, i.opacity * Theme.golden-ratio);
    }
}
